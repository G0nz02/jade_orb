generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model hunts {
  user_email String  @db.VarChar(255)
  dexnum     Int
  encounters Int
  ongoing    Boolean
  game       String  @db.VarChar(255)
  method     String  @db.VarChar(255)
  hunt_id    String  @id @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  users      users   @relation(fields: [user_email], references: [email], onDelete: Cascade, map: "fk_username")
}

model users {
  username   String    @unique @db.VarChar(255)
  password   String    @db.VarChar(255)
  email      String    @unique @db.VarChar(255)
  created    DateTime  @db.Timestamp(6)
  last_login DateTime? @db.Timestamp(6)
  user_id    String    @id @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  hunts      hunts[]
}

model pokemon {
  pokemon_id Int     @id
  name       String  @unique @db.VarChar(255)
  shiny_img  String?
  normal_img String?
}
